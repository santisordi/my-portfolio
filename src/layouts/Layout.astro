---
import "@fontsource-variable/onest";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
	title: string;
	description: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/SantiIcon.jpg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<div class="inset-0 -z-10 h-full w-full items-center py-10 [background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#63e_100%)]">
				<slot />
		<Footer />
		</div>	
	</body>
</html>
<style is:global>
	:root {
		color-scheme: light dark;
	}
	html {
		font-family: "Onest variable", system-ui, sans-serif;
		scroll-behavior: smooth;
	}
	body {
		background-color:rgb(0, 0, 0);
	}
	/* por si el usuairo desactiva animaciones de su OS */
	@media (prefers-reduce-motion: reduce) {
		html {
			scroll-behavior: auto;
		}
	}

</style>
